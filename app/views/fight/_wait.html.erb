<div id="timer">20 ждем противника...</div>
<script>
  var timeLeft = 20;
  var elem = document.getElementById('timer');

  var timerId = setInterval(countdown, 1000);

  function countdown() {
    if (timeLeft == 0) {
      clearTimeout(timerId);
      displayNumbers();
    } else {
      elem.innerHTML = timeLeft + ' ждем противника...';
      timeLeft--;
    }
  }
  function displayNumbers() {
    location.reload();
  }

</script>