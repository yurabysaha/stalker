<div class="container" id="container1">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Новое предприятие</h3>
        </div>
        <div class="panel-body">
          <%= form_for :item, url: item_index_path, method: :post do |f| %>
              <div class="form-group">
                <%= f.text_field :name, class: 'form-control input-sm', placeholder: 'Название предмета...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :description, class: 'form-control input-sm', placeholder: 'Описание...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :price, class: 'form-control input-sm', placeholder: 'Цена...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :body_type, class: 'form-control input-sm', placeholder: 'Тип...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :min_lvl, class: 'form-control input-sm', placeholder: 'Минимальний уровень...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :strength, class: 'form-control input-sm', placeholder: 'Прочность...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :add_health, class: 'form-control input-sm', placeholder: 'Жизни +...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :add_damage, class: 'form-control input-sm', placeholder: 'Количество урона...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :amount, class: 'form-control input-sm', placeholder: 'Количество...' %>
              </div>
              <div class="form-group">
                <%= f.text_field :factory_id, class: 'form-control input-sm', placeholder: 'ID предприятия...' %>
              </div>
              <div class="form-group">
                <%= f.file_field :avatar %>
              </div>
              <%= f.submit value: 'Создать', class: 'btn btn-block btn-success' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

  .centered-form {
    margin-top: 120px;
    margin-bottom: 120px;
  }

  .centered-form .panel {
    background: rgba(255, 255, 255, 0.8);
    box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
  }
</style>